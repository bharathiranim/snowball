    <!-- Hidden Script to Trigger Alert -->
    <script>
        document.getElementById('challengeStartBtn').addEventListener('click', () => {
            // The glitch alert will appear on click
            alert('You‚Äôve been hit by a snowball! ‚ùÑ');

            // Add message to guide player
            if (!document.querySelector('.glitch-message')) {
                const glitchMessage = document.createElement('p');
                glitchMessage.classList.add('glitch-message');
                glitchMessage.textContent = 'Find and remove the glitch to restore Christmas magic!';
                document.body.appendChild(glitchMessage);
            }

            // Trigger next script check after 1 second
            setTimeout(() => {
                const scripts = document.querySelectorAll('script');
                const alertScriptPresent = Array.from(scripts).some(script =>
                    script.textContent.includes("alert('You‚Äôve been hit by a snowball!')")
                );

                if (!alertScriptPresent) {
                    // Redirect to a subpage where the flag is revealed
                    window.location.href = "flag.html";
                }
            }, 1000);
        });

        // Snowfall animation logic
        for (let i = 0; i < 50; i++) {
            let snowflake = document.createElement('div');
            snowflake.classList.add('snowflake');
            snowflake.textContent = '‚ùÑ';
            snowflake.style.left = `${Math.random() * 100}%`;
            snowflake.style.animationDuration = `${Math.random() * 10 + 5}s`;
            snowflake.style.animationDelay = `${Math.random() * 10}s`;
            document.querySelector('.snowflakes').appendChild(snowflake);
        }

        // Snowflake falling animation CSS
        const styleSheet = document.createElement("style");
        styleSheet.innerText = `
            @keyframes fall {
                0% { top: -10%; opacity: 1; }
                100% { top: 100%; opacity: 0; }
            }
        `;
        document.head.appendChild(styleSheet);
    </script>
